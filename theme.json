		"spacing": {
			"padding": {
				"top": "0",
				"right": "0",
				"bottom": "0",
				"left": "0"
			}
		},
		"elements": {
			"link": {
				"color": {
					"text": "#6b9ac4"
				},
				":hover": {
					"color": {
						"text": "#274060"
					}
				}
			},
			"button": {
				"color": {
					"background": "#6b9ac4",
					"text": "#ffffff"
				},
