			},
			"core/button": {
				"color": {
					"background": "#6b9ac4",
					"text": "#ffffff"
				},
				":hover": {
					"color": {
						"background": "#274060"
					}
				}
			},
			"core/quote": {
				"border": {
					"left": {
						"color": "#6b9ac4",
						"width": "4px"
					}
				},
				"spacing": {
					"padding": {
						"left": "1rem"
					},
					"margin": {
						"top": "2rem",
						"bottom": "2rem"
					}
				}
			},
			"core/pullquote": {
				"border": {
					"top": {
						"color": "#6b9ac4",
						"width": "4px"
					},
					"bottom": {
						"color": "#6b9ac4",
						"width": "4px"
					}
				},
				"spacing": {
					"padding": {
						"top": "2rem",
						"bottom": "2rem"
					},
					"margin": {
						"top": "2rem",
						"bottom": "2rem"
					}
				}
			}
		}
